</div>

<!-- Bell notification -->
<div id="notification" role="button" aria-label="Notifications"></div>

<!-- Purple glow -->
<div id="purple-glow"></div>

<!-- Falling stars canvas layers -->
<canvas id="stars"></canvas>
<canvas id="stars2"></canvas>
<canvas id="stars3"></canvas>

<!-- Main content -->
<div id="main" role="main">
  <div>
    <div id="welcome-text">
      Welcome to <strong>universe.<span id="cursor"></span></strong>
    </div>
    <div id="subtitle">Start your journey today!</div>
    <button id="btn-get-started" aria-label="Get Started">
      Get Started
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M5 12h14M13 6l6 6-6 6" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>

<script>
  // Stars animation on canvases
  function createStars(canvas, speedFactor, count, sizeRange) {
    const ctx = canvas.getContext('2d');
    let stars = [];

    function randomRange(min, max) {
      return Math.random() * (max - min) + min;
    }

    function init() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      stars = [];
      for (let i = 0; i < count; i++) {
        stars.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height,
          size: randomRange(sizeRange[0], sizeRange[1]),
          speed: speedFactor * randomRange(0.2, 1),
          opacity: Math.random()
        });
      }
    }

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      stars.forEach(star => {
        star.x -= star.speed;
        if (star.x < 0) star.x = canvas.width;
        ctx.beginPath();
        ctx.arc(star.x, star.y, star.size, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255,255,255,${star.opacity})`;
        ctx.fill();
      });
    }

    function loop() {
      draw();
      requestAnimationFrame(loop);
    }

    window.addEventListener('resize', () => {
      init();
    });

    init();
    loop();
  }

  createStars(document.getElementById('stars'), 0.15, 120, [0.5, 1.2]);
  createStars(document.getElementById('stars2'), 0.07, 80, [0.3, 0.7]);
  createStars(document.getElementById('stars3'), 0.03, 50, [0.2, 0.5]);

  // Accessibility: focus ring on sidebar buttons
  const sidebarButtons = document.querySelectorAll('#sidebar button');
  sidebarButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      sidebarButtons.forEach(b => {
        b.classList.remove('active');
        b.setAttribute('aria-pressed', 'false');
        b.tabIndex = -1;
      });
      btn.classList.add('active');
      btn.setAttribute('aria-pressed', 'true');
      btn.tabIndex = 0;
      btn.focus();
    });
  });
</script>

</body>
